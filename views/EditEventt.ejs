<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags-->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Colorlib Templates">
    <meta name="author" content="Colorlib">
    <meta name="keywords" content="Colorlib Templates">

    <!-- Title Page-->
    <title>Au Register Forms by Colorlib</title>

    <!-- Icons font CSS-->
    <link href="/vendor/mdi-font/css/material-design-iconic-font.min.css" rel="stylesheet" media="all">
    <link href="/vendor/font-awesome-4.7/css/font-awesome.min.css" rel="stylesheet" media="all">
    <!-- Font special for pages-->
    <!-- <link href="https://fonts.googleapis.com/css?family=Poppins:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet"> -->

    <!-- Vendor CSS-->
    <link href="/vendor/select2/select2.min.css" rel="stylesheet" media="all">
    <link href="/vendor/datepicker/daterangepicker.css" rel="stylesheet" media="all">

    <!-- Main CSS-->
    <link href="/css/mainr.css" rel="stylesheet" media="all">
</head>

<body>
    <div class="page-wrapper bg-gra-02 p-t-130 p-b-100 font-poppins">
        <div class="wrapper wrapper--w680">
            <div class="card card-4">
                <div class="card-body">
                    <h2 class="title">Add Event</h2>
                    <form method="post" action="http://localhost:8080/events/update">
                        <div class="row row-space">
                            <div class="col-2">
                                <div class="input-group">
                                    <!-- <label class="label">id</label> -->
                                    <div class="input-group-icon">
                                        <input class="input--style-4 js-datepicker" type="hidden" name="_id" value="<%=eventdata[0]._id %>"/>
                                        <i class="zmdi zmdi-calendar-note input-icon js-btn-calendar"></i>
                                        <label class="label">Title</label>
                                    </div>
                                    <div class="input-group-icon">
                                        <input class="input--style-4 js-datepicker" type="text" name="title"  value="<%=eventdata[0].title%>">
                                        <i class="zmdi zmdi-calendar-note input-icon js-btn-calendar"></i>
                                    </div>
                                </div>
                            </div>
                            </div>
                        <div class="row row-space">
                            <div class="col-2">
                                <div class="input-group">
                                    <label class="label">date</label>
                                    <div class="input-group-icon">
                                        <input class="input--style-4 js-datepicker" type="date" name="eventDate"  value="<%=eventdata[0].date%>">
                                        <i class="zmdi zmdi-calendar-note input-icon js-btn-calendar"></i>
                                    </div>
                                </div>
                            </div>
                            <div class="row row-space">
                                <div class="col-2">
                                    <div class="input-group">
                                        <label class="label">Main Speaker</label>
                                        <select class="mdb-select md-formclass input--style-4 js-datepicker" name="mainSpeaker">
                                            <% speakerdata.forEach(function(element){%> 
                                                <%if(eventdata[0].mainSpeaker){%>
                                                 <% if(eventdata[0].mainSpeaker.name==element.name){%>
                                                  <option value="<%=element['_id']%>" selected><%=element.name%></option>
                                                <%}%>
                                                
                                                <% }%>
                                                <option value="<%=element['_id']%>" ><%=element.name%></option>
                                                <%})%>
                                          </select>
                                    </div>
                                </div>
                            
                                
                                    <div class="col-2">
                                        <div  class="input-group">
                                            <label class="label">Other Speakers</label>
                                            <select  class="mdb-select md-form input--style-4 js-datepicker" name="otherSpeakers" multiple>
                                                <%for(let i of speakerdata){%>
                                                    <%if(eventdata[0].otherSpeakers){%>
                                                    <%for(let el of eventdata[0].otherSpeakers){%>
                                                      <%if(el.name==i.name){%><option value="<%=i['_id']%>" selected ><%=el.name%></option>
                                                      <%break;
                                                    break;
                                                break;}%>
                                                         
                                                <% };%>
                                                <% }%>
                                                <option value="<%=i['_id']%>" ><%=i.name%></option>
            
                                                <%}%>
                                              </select>
                                        </div>
                                    </div>
                                    
                               
                        </div>
                        <div class="p-t-15">
                            <input class="btn btn--radius-2 " style="background-color: lightcoral;" type="submit" value="Edit"/>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Jquery JS-->
    <script src="vendor/jquery/jquery.min.js"></script>
    <!-- Vendor JS-->
    <script src="vendor/select2/select2.min.js"></script>
    <script src="vendor/datepicker/moment.min.js"></script>
    <script src="vendor/datepicker/daterangepicker.js"></script>

    <!-- Main JS-->
    <script src="js/global.js"></script>

</body><!-- This templates was made by Colorlib (https://colorlib.com) -->

</html>
